@page "/pessoas/lista"
@using BlazorApp.Shared.Models
<h3>Lista de Pessoas</h3>

<table>
    <thead>
        <tr>
            <th>Id</th>
            <th>Nome</th>
            <th>Peso</th>
        </tr>
    </thead>

    <tbody>
        @foreach(var pessoa in pessoas)
        {
            <tr>
            <td>@pessoa.Id</td>
            <td>@pessoa.Nome</td>
            <td>@pessoa.Peco</td>
        </tr> 

        }
    </tbody>
</table>


@code {

    List<Pessoa> pessoas = new List<Pessoa>
    {
        new Pessoa {Id= 1, Nome="Rondinele", Peco=70},
            new Pessoa {Id= 2, Nome="Gabriela", Peco=70},
        new Pessoa {Id= 3, Nome="Beatriz", Peco=20}
    };


}
