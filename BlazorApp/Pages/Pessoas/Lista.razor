<h3>Lista de Pessoas</h3>

@if (pessoas == null)
{
    <p><em>Carregando.......</em></p>
}
else if (!pessoas.Any())
{
    <p><em>Não Tem Nenhum cliente cadastardo.  Adicionie algum.</em></p>
}
else
{
    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nome</th>
                <th>Peso</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var pessoa in pessoas)
            {
                <tr>
                    <td>@pessoa.Id</td>
                    <td>@pessoa.Nome</td>
                    <td>@pessoa.Descricao</td>
                </tr>
            }
        </tbody>
    </table>
}


